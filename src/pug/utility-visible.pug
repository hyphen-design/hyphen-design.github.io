block content
  .theme-dashboard
    include include/_dashboard-header.pug
    .l-wrapper
      include include/_dashboard-navigation.pug
      main.l-main(role='main')
        section.u-bg-deeporange
          .c-pagetitle
            h1 Visible / Hidden
        section#visible
          .l-container.l-container-thin
            h2 表示/非表示
            hr.u-separator-gray.u-space-bottom-3
